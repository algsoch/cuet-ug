{
    "name": "DU Admission Analyzer",
    "short_name": "DU Analyzer",
    "description": "Advanced PDF analysis and visualization tool for Delhi University admission data with interactive charts and responsive design",
    "version": "1.0.0",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#3b82f6",
    "background_color": "#ffffff",
    "scope": "/",
    "lang": "en-US",
    "dir": "ltr",
    "categories": ["education", "productivity", "utilities"],
    "screenshots": [
        {
            "src": "/static/screenshot-wide.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Dashboard view showing interactive charts and analytics"
        },
        {
            "src": "/static/screenshot-narrow.png",
            "sizes": "390x844",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Mobile view with responsive design and touch-friendly interface"
        }
    ],
    "icons": [
        {
            "src": "/static/icon-72x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-96x96.png",
            "sizes": "96x96",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-128x128.png",
            "sizes": "128x128",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-144x144.png",
            "sizes": "144x144",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-152x152.png",
            "sizes": "152x152",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/static/icon-384x384.png",
            "sizes": "384x384",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/static/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "Upload PDF",
            "short_name": "Upload",
            "description": "Quickly upload and process a new PDF file",
            "url": "/?action=upload",
            "icons": [
                {
                    "src": "/static/upload-icon-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "View Analytics",
            "short_name": "Analytics",
            "description": "View detailed analytics and charts",
            "url": "/?view=analytics",
            "icons": [
                {
                    "src": "/static/analytics-icon-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "File Manager",
            "short_name": "Files",
            "description": "Manage uploaded and processed files",
            "url": "/?view=files",
            "icons": [
                {
                    "src": "/static/files-icon-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/api/upload",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "files": [
                {
                    "name": "file",
                    "accept": [".pdf", "application/pdf"]
                }
            ]
        }
    },
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "application/pdf": [".pdf"]
            },
            "launch_type": "single-client"
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+duanalyzer",
            "url": "/?url=%s"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate",
    "related_applications": [],
    "prefer_related_applications": false,
    "iarc_rating_id": "",
    "permissions": [
        "storage",
        "background-sync",
        "push",
        "notifications"
    ],
    "features": [
        "cross-origin-isolated"
    ]
}
